<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gaofeng.tulingdemo.view.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">


        <EditText
            android:id="@+id/et_user_info"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.8" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.2"
            android:text="查询" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_homelife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:visibility="gone" />

    <cn.droidlover.xrecyclerview.XRecyclerView
        android:id="@+id/xrecycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></cn.droidlover.xrecyclerview.XRecyclerView>


</LinearLayout>
